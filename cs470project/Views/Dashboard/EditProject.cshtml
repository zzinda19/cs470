@model cs470project.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Edit Project</h3>

<form id="editProject">
    <div class="form-group">
        <input id="projectID" name="projectID" type="hidden" value=@Model.ProjectId>
    </div>
    <div class="form-group">
        <label>Project Name</label>
        <input id="name" name="name" required type="text" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Project Description</label>
        <textarea id="description" name="description" required type="text" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button> &nbsp;
        <a href="/Dashboard/ProjectDashboard/@Model.ProjectId" class="btn btn-default">Cancel</a>
    </div>

</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/EditProject")
}