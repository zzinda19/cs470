@{
    ViewBag.Title = "New Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>New Project</h3>

<form id="newProject">
    <div class="form-group">
        <label>Project Name</label>
        <input id="name" name="name" required type="text" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Project Description</label>
        <textarea id="description" name="description" required type="text" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button> &nbsp;
        @Html.ActionLink("Cancel", "Index", "Dashboard", null, new { @class = "btn btn-default" })
    </div>
</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/NewProject")
}