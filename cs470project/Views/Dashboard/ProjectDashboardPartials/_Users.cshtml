@model cs470project.ViewModels.DashboardViewModel
<h4>User Permissions</h4>
<table id="researchProjectUsers" class="table table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Username</th>
            <th>Access Type</th>
            <th>Remove User?</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div>
    <button id="addUserButton" class="btn btn-primary">Add User</button>
</div>

@*Add User Form to be placed in Bootbox Modal.*@
<div id="addUserFormDiv" hidden>
    <form id="addUserForm" class="form-group">
        <div class="form-group">
            <label for="username">Username:</label>
            <input id="username" name="username" class="form-control" type="text" required>
        </div>
        <div class="form-group">
            <label for="admin">Role:</label>
            <br />
            <label class="radio-inline"><input type="radio" name="admin" value="0" checked>User</label>
            <label class="radio-inline"><input type="radio" name="admin" value="1">Admin</label>
        </div>
    </form>
</div>